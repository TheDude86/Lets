<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:padding="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/pro_pic"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:background="#0090ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name:"
            android:id="@+id/textView14"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/pro_pic"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_name"
            android:layout_alignBottom="@+id/textView14"
            android:layout_alignStart="@+id/pro_pic"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Birthday:"
            android:id="@+id/textView15"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/textView14"
            android:layout_alignStart="@+id/textView14" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_birthday"
            android:layout_alignBottom="@+id/textView15"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignStart="@+id/edit_name"
            android:layout_alignEnd="@+id/edit_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bio:"
            android:id="@+id/textView16"
            android:layout_below="@+id/textView15"
            android:layout_alignStart="@+id/textView15"
            android:layout_marginTop="50dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edit_bio"
            android:layout_below="@+id/textView16"
            android:layout_alignStart="@+id/textView16"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gender:"
            android:id="@+id/textView17"
            android:layout_below="@+id/edit_bio"
            android:layout_alignStart="@+id/edit_bio"
            android:layout_marginTop="50dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/male"
            android:layout_below="@+id/textView17"
            android:layout_alignStart="@+id/textView17"
            android:layout_marginTop="15dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/female"
            android:layout_below="@+id/male"
            android:layout_alignStart="@+id/male"
            android:text="Female"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tranny"
            android:layout_below="@+id/female"
            android:layout_alignStart="@+id/female"
            android:text="Other"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Interests:"
            android:id="@+id/textView18"
            android:layout_below="@+id/tranny"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edit_interests"
            android:layout_below="@+id/textView18"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Privacy:"
            android:id="@+id/textView19"
            android:layout_below="@+id/edit_interests"
            android:layout_alignStart="@+id/edit_interests"
            android:layout_marginTop="50dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chk_public"
            android:layout_below="@+id/textView19"
            android:layout_alignStart="@+id/textView19"
            android:text="Public"
            android:checked="false"
            android:layout_marginTop="15dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chk_restricted"
            android:layout_below="@+id/chk_public"
            android:layout_alignStart="@+id/chk_public"
            android:text="Restricted"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chk_pussy"
            android:layout_below="@+id/chk_restricted"
            android:layout_alignStart="@+id/chk_restricted"
            android:text="Private"
            android:checked="false" />

        <com.dd.CircularProgressButton
            android:id="@+id/create"
            android:layout_width="196dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_below="@+id/chk_pussy"
            app:cpb_textComplete="Complete"
            app:cpb_textError="Something went wrong"
            app:cpb_textIdle="Save Profile" />

    </RelativeLayout>
</ScrollView>