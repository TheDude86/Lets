<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.main.lets.lets.Activities.AccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="What is your email?"
                android:id="@+id/textView29"
                android:layout_marginTop="69dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email"
                android:layout_below="@+id/textView29"
                android:layout_centerHorizontal="true"
                android:hint="e-mail address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Password"
                android:id="@+id/textView30"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="69dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password"
                android:layout_below="@+id/textView30"
                android:layout_centerHorizontal="true"
                android:hint="password" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Confirm Password"
                android:id="@+id/textView31"
                android:layout_marginTop="69dp"
                android:layout_below="@+id/password"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/confirm"
                android:hint="same password"
                android:layout_below="@+id/textView31"
                android:layout_alignStart="@+id/password"
                android:layout_alignLeft="@+id/password" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create"
                android:id="@+id/create"
                android:layout_below="@+id/confirm"
                android:layout_marginTop="69dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_bg"
                android:layout_alignEnd="@+id/textView31"
                android:layout_alignStart="@+id/textView31"
                android:layout_alignRight="@+id/textView31"
                android:layout_alignLeft="@+id/textView31" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
